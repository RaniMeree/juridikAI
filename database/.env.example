# Database Connection Configuration
# Copy this to .env and fill in your values

# PostgreSQL Connection
DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/anna_legal_ai

# For Render.com (they provide this)
# DATABASE_URL will look like:
# postgresql://anna_user:xxxx@dpg-xxxxx-a.frankfurt-postgres.render.com/anna_legal_db

# SQLAlchemy Settings
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20
DB_POOL_TIMEOUT=30
DB_POOL_RECYCLE=3600

# Database Echo (set to false in production)
DB_ECHO=false
