{
  "expo": {
    "name": "Juridik AI assistant",
    "slug": "juridik-ai-assistant",
    "version": "1.0.0",
    "orientation": "portrait",
    "scheme": "juridik-ai",
    "userInterfaceStyle": "automatic",
    "splash": {
      "resizeMode": "contain",
      "backgroundColor": "#0F172A"
    },
    "assetBundlePatterns": ["**/*"],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.juridikai.app"
    },
    "android": {
      "package": "com.juridikai.app"
    },
    "web": {
      "bundler": "metro",
      "output": "single",
      "favicon": "./assets/icon.png"
    },
    "plugins": ["expo-router", "expo-localization", "expo-secure-store"],
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "isDev": false,
      "apiUrl": "https://juridikai-1.onrender.com/api"
    }
  }
}
